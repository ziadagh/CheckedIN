<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/s1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/page">


        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <HorizontalScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pad_10dp" >

                <ImageView
                    style="@style/img_profile"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:src="@drawable/default_user"
                    android:id="@+id/img1" />

                <ImageView
                    style="@style/img_profile"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:src="@drawable/default_user"
                    android:soundEffectsEnabled="false"
                    android:id="@+id/img2" />

                <ImageView
                    style="@style/img_profile"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:src="@drawable/default_user"
                    android:soundEffectsEnabled="false"
                    android:id="@+id/img3" />

                <!--<ImageView
                    style="@style/img_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:src="@drawable/img3" />-->

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="@dimen/pad_10dp" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/profileuser_fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_5dp"
                    android:textColor="@color/main_color_red"
                    android:textSize="@dimen/txt_20sp" />

                <TextView
                    android:id="@+id/profile_user_lname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_5dp"
                    android:textColor="@color/main_color_red"
                    android:textSize="@dimen/txt_20sp" />

                <TextView
                    android:id="@+id/profile_user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_5dp"
                    android:textColor="@color/main_color_red"
                    android:textSize="@dimen/txt_20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/profileuser_current_city"
                style="@style/lbl_14gray"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_5dp"
                android:drawableLeft="@drawable/icp_location"
                android:drawablePadding="@dimen/pad_3dp" />

            <RelativeLayout
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_20dp" >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icp_about" />

                <TextView
                    android:id="@+id/lbl"
                    style="@style/lbl_14gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_5dp"
                    android:layout_toRightOf="@+id/img"
                    android:text="@string/about"
                    android:textSize="@dimen/txt_16sp" />

                <TextView
                    android:id="@+id/profileuser_bio"
                    style="@style/lbl_14gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/lbl"
                    android:layout_below="@+id/lbl"
                    android:layout_marginTop="@dimen/pad_3dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView33" />

            <Button
                style="@style/btn"
                android:id="@+id/profileuser_like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_like"
                android:layout_gravity="bottom|center_horizontal"
                android:onClick="onClick"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="default"
                android:id="@+id/profileuser_username"
                android:textColor="#ffffff" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>