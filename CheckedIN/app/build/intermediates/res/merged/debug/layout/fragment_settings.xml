<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrol"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/pad_5dp" >

        <TextView
            android:id="@+id/general"
            style="@style/lbl_setting2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gen_setting" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_10dp" >

            <TextView
                android:id="@+id/network_status"
                style="@style/lbl_setting1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/net_status" />

            <TextView
                android:id="@+id/net_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connected"
                android:textColor="@color/green"
                android:textSize="@dimen/txt_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_10dp" >

            <TextView
                android:id="@+id/notificaitons"
                style="@style/lbl_setting1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/notification" />

            <Switch
                android:id="@+id/notification_switch"
                style="@style/custom_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <TextView
            style="@style/lbl_setting2"
            android:id="@+id/chat_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat Settings" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_10dp" >

            <TextView
                style="@style/lbl_setting1"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Font size" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textSize="@dimen/txt_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_10dp" >

            <TextView
                style="@style/lbl_setting1"
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wallpaper" />

        </LinearLayout>

        <TextView
            android:id="@+id/account_settings"
            style="@style/lbl_setting2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acc_seting" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_10dp" >

            <TextView
                android:id="@+id/about"
                style="@style/lbl_setting1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/about" />
        </LinearLayout>

        <TextView
            style="@style/lbl_setting2"
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="         " />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:id="@+id/settings_logout_linearlayout"
            android:background="@color/gray"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:id="@+id/settings_delete_linearlayout"
            android:background="@color/red_light"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>