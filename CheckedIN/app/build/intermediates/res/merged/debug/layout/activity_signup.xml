<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.checkedin.ui.Signup"
    android:background="@drawable/login_bg">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/scrollView"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sign Up"
                android:id="@+id/textView5"
                android:textColor="@color/white_smoke"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="First Name"
                android:ems="10"
                android:id="@+id/et_fname"
                android:layout_marginTop="37dp"
                android:layout_below="@+id/textView5"
                android:layout_alignLeft="@+id/et_email"
                android:layout_alignStart="@+id/et_email"
                android:layout_alignRight="@+id/et_email"
                android:layout_alignEnd="@+id/et_email"
                style="@style/txt_white"
                android:layout_marginBottom="2dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Last Name"
                android:ems="10"
                android:id="@+id/et_lname"
                android:padding="10dp"
                android:layout_below="@+id/et_fname"
                android:layout_alignLeft="@+id/et_fname"
                android:layout_alignStart="@+id/et_fname"
                android:layout_alignRight="@+id/et_email"
                android:layout_alignEnd="@+id/et_email"
                style="@style/txt_white"
                android:layout_marginBottom="2dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email Address"
                android:ems="10"
                android:id="@+id/et_email"
                android:width="320dp"
                android:padding="10dp"
                android:layout_below="@+id/et_lname"
                android:layout_centerHorizontal="true"
                style="@style/txt_white"
                android:layout_marginBottom="2dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Username"
                android:ems="10"
                android:id="@+id/et_username"
                android:width="320dp"
                android:padding="10dp"
                android:layout_below="@+id/et_email"
                android:layout_centerHorizontal="true"
                style="@style/txt_white"
                android:layout_marginBottom="2dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:ems="10"
                android:id="@+id/et_password"
                android:width="320dp"
                android:padding="10dp"
                android:layout_below="@+id/et_username"
                android:layout_centerHorizontal="true"
                style="@style/txt_white"
                android:layout_marginBottom="2dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:ems="10"
                android:id="@+id/et_confpassword"
                android:width="320dp"
                android:padding="10dp"
                android:layout_below="@+id/et_password"
                android:layout_centerHorizontal="true"
                style="@style/txt_white"
                android:layout_marginBottom="2dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="dd-mm-yyyy"
                android:ems="10"
                android:id="@+id/et_birthday"
                android:width="320dp"
                android:padding="10dp"
                android:layout_below="@+id/et_confpassword"
                android:layout_centerHorizontal="true"
                style="@style/txt_white"
                android:layout_marginBottom="2dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Current City"
                android:ems="10"
                android:id="@+id/et_currentCity"
                android:padding="10dp"
                android:layout_below="@+id/et_birthday"
                android:layout_alignLeft="@+id/et_birthday"
                android:layout_alignStart="@+id/et_birthday"
                android:layout_alignRight="@+id/et_birthday"
                android:layout_alignEnd="@+id/et_birthday"
                style="@style/txt_white"
                android:layout_marginBottom="2dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@color/white_smoke">

                <TextView
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/gender"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="20dp"
                    android:layout_alignTop="@+id/radioButton"
                    android:layout_alignLeft="@+id/et_currentCity"
                    android:layout_alignStart="@+id/et_currentCity"
                    android:textColor="#000000"
                    android:hint="Gender" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/textView20"
                        android:textColor="#000000" />

                    <RadioGroup
                        android:id="@+id/radioSex"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <RadioButton
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioMale"
                            android:checked="false"
                            android:paddingTop="0dp"
                            android:layout_alignTop="@+id/radioFemale"
                            android:layout_centerHorizontal="true"
                            android:textColor="#000000"
                            android:onClick="RadioButtonClicked"
                            android:hint="Male" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioFemale"
                            android:checked="false"
                            android:paddingTop="0dp"
                            android:layout_below="@+id/et_currentCity"
                            android:layout_toRightOf="@+id/textView5"
                            android:layout_toEndOf="@+id/textView5"
                            android:textColor="#000000"
                            android:onClick="RadioButtonClicked"
                            android:hint="Female" />
                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:id="@+id/signup_page_button"
                android:width="320dp"
                android:background="#c5bcbe"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/et_currentCity"
                android:layout_alignStart="@+id/et_currentCity"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

